@{
    ViewData["Title"] = "Query3";
}

<div class="content">
    <div class="text-center">
        <h2>Запити</h2>
    </div>

    <div id="servicesByPosition">
        <h3>Запит 3:</h3>
        <h4>Знайти назви та вартість всіх послуг усіх працівників із певної посади</h4>
        <form asp-controller="Query" asp-action="Query3" method="post">
            <div class="form-group">
                <label for="positionId">Посада</label>
                <select class="form-control" id="positionId" name="positionId" asp-items="ViewBag.Positions" required></select>
            </div>
            <div style="display: flex; margin-top: 15px; gap: 15px;">
                <button type="submit" class="btn btn-primary">Надіслати запит</button>
                <a class="btn-back-new" asp-action="Index">Повернутися до запитів</a>
            </div>
        </form>
        <table class="table">
            <thead>
                <tr>
                    <th>Назва послуги</th>
                    <th>Ціна</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    <tr>
                        <td>@service.Name</td>
                        <td>@service.Price</td>
                    </tr>
                }
            </tbody>
        </table>
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <p>@ViewBag.Message</p>
        }

    </div>

</div>
